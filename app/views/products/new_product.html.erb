<h1>Add a New Product</h1>

<div class="new-product-container">
  <%= form_with model: @product, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Product Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter product name", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", placeholder: "Enter product description", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :price, "Price", class: "form-label" %>
      <%= form.number_field :price, step: 0.01, class: "form-control", placeholder: "Enter product price", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :image, "Image", class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= form.submit "Create Product", class: "btn btn-primary" %>
      <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
