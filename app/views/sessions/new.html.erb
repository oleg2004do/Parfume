<h1>Log In</h1>

<div class="login-container">
  <%= form_with url: login_path, method: :post do |form| %>
    <div class="mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
    </div>

    <div class="mt-3">
      <%= form.submit "Log In", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "Back to Home", root_path, class: "btn btn-home" %>
</div>
